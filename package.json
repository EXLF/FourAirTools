{
  "name": "fouair-toolbox",
  "version": "1.0.8",
  "description": "FourAir社区撸毛工具箱桌面版",
  "main": "src/main/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "dist": "npm run build",
    "dist:win": "npm run build -- --win"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bip39": "^3.1.0",
    "electron-log": "^5.4.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^6.14.0",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "keytar": "^7.9.0",
    "socks-proxy-agent": "^8.0.5",
    "sqlite3": "^5.1.7",
    "vm2": "^3.9.19"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0"
  },
  "keywords": [
    "electron",
    "crypto",
    "toolbox"
  ],
  "author": "YourNameOrTeam",
  "license": "MIT",
  "build": {
    "appId": "com.fourAir.fouairtoolbox",
    "productName": "FourAir",
    "asar": true,
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "EXLF",
        "repo": "uploadPackage"
      }
    ],
    "files": [
      "**/*",
      "!test_script_loading.js",
      "!project_structure.md",
      "!README.md",
      "!.git/",
      "!.github/",
      "!dist/",
      "!dist_electron/",
      "!release-builds/"
    ],
    "extraResources": [
      {
        "from": "user_scripts",
        "to": "user_scripts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icons/logo256.ico"
        },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FourAir",
      "installerIcon": "src/assets/icons/logo256.ico",
      "uninstallerIcon": "src/assets/icons/logo256.ico",
      "installerHeaderIcon": "src/assets/icons/logo256.ico"
    },
    "directories": {
      "buildResources": "build_resources",
      "output": "dist_electron"
    }
  }
}
