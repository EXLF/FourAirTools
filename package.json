{
  "name": "fouair-toolbox",
  "version": "1.3.3",
  "description": "FourAir社区撸毛工具箱桌面版",
  "main": "src/main/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "dist": "npm run build",
    "dist:win": "npm run build -- --win"
  },
  "dependencies": {
    "@ethersproject/contracts": "^5.8.0",
    "@ethersproject/providers": "^5.8.0",
    "@ethersproject/units": "^5.8.0",
    "@ethersproject/wallet": "^5.8.0",
    "@polkadot/api": "^16.1.1",
    "@polkadot/util": "^13.5.1",
    "@polkadot/util-crypto": "^13.5.1",
    "@solana/web3.js": "^1.98.2",
    "axios": "^1.9.0",
    "big.js": "^6.2.2",
    "bip39": "^3.1.0",
    "bn.js": "^5.2.1",
    "decimal.js": "^10.4.3",
    "electron-log": "^5.4.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^6.14.3",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "joi": "^17.13.3",
    "jsonschema": "^1.4.1",
    "keytar": "^7.9.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "p-limit": "^3.1.0",
    "p-queue": "^6.6.2",
    "retry": "^0.13.1",
    "semver": "^7.6.3",
    "socks-proxy-agent": "^8.0.5",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0",
    "vm2": "^3.9.19",
    "web3": "^4.15.0",
    "web3-utils": "^4.3.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0"
  },
  "keywords": [
    "electron",
    "crypto",
    "toolbox"
  ],
  "author": "YourNameOrTeam",
  "license": "MIT",
  "build": {
    "appId": "com.fourAir.fouairtoolbox",
    "productName": "FourAir",
    "asar": true,
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "EXLF",
        "repo": "uploadPackage"
      }
    ],
    "files": [
      "**/*",
      "!test_script_loading.js",
      "!README.md",
      "!CHANGELOG.md",
      "!.git/",
      "!.github/",
      "!.cursor/",
      "!dist/",
      "!dist_electron/",
      "!release-builds/",
      "!.cursorignore",
      "!.gitignore",
      "!node_modules/.cache/",
      "!user_scripts/scripts/test_*.js",
      "!**/*.map",
      "!**/*.ts",
      "!**/tsconfig.json",
      "!**/.vscode/",
      "!**/node_modules/*/test/",
      "!**/node_modules/*/tests/",
      "!**/node_modules/*/*.md",
      "!**/node_modules/*/README*",
      "!**/node_modules/*/CHANGELOG*",
      "!**/node_modules/*/LICENSE*",
      "!**/node_modules/*/.github/",
      "!**/node_modules/*/docs/",
      "!**/node_modules/*/example*/",
      "!**/node_modules/*/sample*/",
      "!**/node_modules/*/demo*/",
      "!server/",
      "!docs/"
    ],
    "extraResources": [
      {
        "from": "user_scripts",
        "to": "user_scripts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icons/logo256.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FourAir",
      "installerIcon": "src/assets/icons/logo256.ico",
      "uninstallerIcon": "src/assets/icons/logo256.ico",
      "installerHeaderIcon": "src/assets/icons/logo256.ico"
    },
    "directories": {
      "buildResources": "build_resources",
      "output": "dist_electron"
    }
  }
}
